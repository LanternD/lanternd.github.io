---
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.id }}",
      "date"     : "{{ post.date | date:"%Y-%m-%d" }}",
      "content"	 : {{ post.content | jsonify | remove: "@"}}
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]

